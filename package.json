{
    "name": "hoks",
    "type": "module",
    "version": "0.1.22",
    "private": false,
    "description": "",
    "author": "Anton Ã–dman <anton.odman@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/banjo/hoks#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/banjo/hoks.git"
    },
    "bugs": "https://github.com/banjo/hoks/issues",
    "keywords": [],
    "sideEffects": true,
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": "dist/bin.js",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.cjs",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint .",
        "prepublishOnly": "nr build",
        "start": "tsx src/bin.ts",
        "test": "vitest --watch=false",
        "test:dev": "vitest",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write .",
        "addFeature": "tsx scripts/add-feature.ts",
        "change:add": "changeset add",
        "change:version": "changeset version",
        "change:publish": "changeset publish",
        "postinstall": "hoks --init"
    },
    "dependencies": {
        "@typescript-eslint/typescript-estree": "^5.56.0",
        "change-case": "^4.1.2",
        "cosmiconfig": "^9.0.0",
        "dotenv": "^16.0.3",
        "execa": "^7.2.0",
        "find-up": "^7.0.0",
        "git-install-hook": "^0.0.10",
        "globby": "^13.1.3",
        "jiti": "^1.18.2",
        "json5": "^2.2.3",
        "minimatch": "^7.4.2",
        "ora": "^6.2.0",
        "picocolors": "^1.0.0",
        "staged-git-files": "^1.3.0"
    },
    "devDependencies": {
        "@antfu/ni": "^0.20.0",
        "@banjoanton/eslint-config": "^0.2.19",
        "@banjoanton/prettier-config": "^0.1.11",
        "@banjoanton/utils": "^1.1.8",
        "@changesets/cli": "^2.29.5",
        "@types/node": "^18.15.3",
        "cleye": "^1.3.2",
        "eslint": "^9.31.0",
        "lint-staged": "^13.2.0",
        "pnpm": "^7.30.0",
        "prettier": "^3.6.2",
        "simple-git-hooks": "^2.8.1",
        "tsup": "^6.7.0",
        "tsx": "^4.20.3",
        "typescript": "^5.0.2",
        "vitest": "^0.29.3"
    },
    "prettier": "@banjoanton/prettier-config",
    "simple-git-hooks": {
        "pre-commit": "pnpm exec lint-staged"
    },
    "lint-staged": {
        "*": [
            "prettier --write --ignore-unknown",
            "eslint --fix"
        ]
    },
    "ling-staged": {
        "*": [
            "prettier --write --ignore-unknown",
            "eslint --fix"
        ]
    }
}
